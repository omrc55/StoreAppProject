@model IEnumerable<Category>

<div class="my-3">
    <h6 class="lead">
        <i class="fa-solid fa-bars text-secondary"></i>
        Categories
    </h6>
</div>
<div class="my-3">
    <ul class="list-group">
        @foreach (var cat in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@cat.CategoryID">
                    @cat.CategoryName
                </a>
            </li>
        }
    </ul>
</div>