@model Order
@{
    ViewData["Title"] = "Order";
}

<div class="text-center my-3">
    <h6 class="display-6">
        Orders
    </h6>
</div>
<form method="post" asp-action="Checkout">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="Name" class="mb-1"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line1" class="mb-1">Line 1</label>
        <input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line2" class="mb-1">Line 2</label>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line3" class="mb-1">Line 3</label>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="City" class="mb-1"></label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-check my-3">
        <input asp-for="GiftWrap" class="form-check-input" type="checkbox" />
        <label asp-for="GiftWrap" class="form-check-label"> Gift wrap these items.</label>
    </div>
    <div class="btn-group my-3">
        <button type="submit" class="btn btn-primary">
            Complete Order
        </button>
    </div>
</form>