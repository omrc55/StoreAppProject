@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center my-5">
    <h6 class="display-6">
        <i class="fa-solid fa-arrow-right-to-bracket bg-secondary text-white rounded-5 p-3"></i>
        <br />
        Login
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group my-3">
                <label class="mb-1" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label class="mb-1" asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group my-3 text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right-to-bracket"></i>
                    Login
                </button>
            </div>
        </form>
        <div>
            If your don't have an account please click here to achieve <a asp-action="Register">registration page.</a>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>