@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<div class="text-center my-3">
    <div class="display-6">Roles</div>
</div>
<div class="d-flex justify-content-end my-3">
    <a class="btn btn-outline-success" asp-action="AddRole">
        <i class="fa-solid fa-plus"></i>
        Add Role
    </a>
</div>
<ul class="list-group">
    @foreach (var role in Model)
    {
        <li class="list-group-item">@role.Name (@role.NormalizedName)</li>
    }
</ul>