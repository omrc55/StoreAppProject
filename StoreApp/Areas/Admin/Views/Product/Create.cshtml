@model ProductDtoForInsertion
@{
    ViewData["Title"] = "Product Create";
}

<div class="text-center my-3">
    <div class="display-6">Product Create</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryID" class="mb-1">Category</label>
        <select class="form-control" asp-for="CategoryID" asp-items="@ViewBag.Categories"></select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName" class="mb-1"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary" class="mb-1"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price" class="mb-1"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl" class="mb-1"></label>
        <input name="file" type="file" class="form-control" />
    </div>
    <div class="btn-group my-3">
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk"></i>
            Save
        </button>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fa-solid fa-list"></i>
            Products
        </a>
    </div>
</form>